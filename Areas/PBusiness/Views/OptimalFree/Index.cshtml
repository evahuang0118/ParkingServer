            {{# } }}
        </td>
        <td>{{item.Fid}}</td>
        <td>
            {{item.Name}}
        </td>
        <td>
            {{# if(item.Type==1){ }} 金額
            {{# }else if(item.Type==2){ }} 時數
            {{# }else if(item.Type==3){ }} 本地全免
            {{# }else if(item.Type==4){ }} 電子單全免
            {{# } }}
        </td>
        <td>
            {{item.StartVal}}- {{item.EndVal}}
        </td>

        <td>
            {{# if(item.Type==1){ }}  {{item.AmountTime}} 元
            {{# }else if(item.Type==2){ }}{{item.AmountTime}} 分鐘
            {{# }else if(item.Type==3){ }} /
            {{# }else if(item.Type==4){ }} /
            {{# } }}

