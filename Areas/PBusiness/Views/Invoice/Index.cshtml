@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>发票票卷的管理</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <script src="~/Content/framework/js/com.js"></script>
</head>
<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <fieldset class="layui-elem-field layuimini-search">
                <legend>搜索信息</legend>
                <div style="margin: 5px 5px 5px 5px">
                    <div class="layui-form layui-form-pane">
                        <div class="layui-form-item">
              
                            <div class="layui-inline">
                                <label class="layui-form-label">年 份</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="InvoiceYear" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">月 份</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="InvoiceMonth" autocomplete="off" class="layui-input">
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label">票轉狀態</label>
                                <div class="layui-input-inline">
                                    <select class="layui-input" name="Statue" id="Statue" style="width: 190px;">
                                        <option value="0">請選擇</option>
                                        <option value="1">未启用</option>
                                        <option value="2">已启用</option>
                                        <option value="3">已使用完</option>
                                    </select>
                                </div>
                            </div>


                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <div id="toolbar" class="elight-table-toolbar">
                <div class="layui-btn-group"></div>
            </div>

            <table id="gridList" class="layui-form layui-table table-hover elight-table" lay-skin="row" lay-even="">
                <thead>
                    <tr>
                        <th> <input type="checkbox" lay-skin="primary"></th>
                        <th>機具編號</th>
                        <th>年 份</th>
                        <th>月 份</th>
                        <th>字 軌</th>
                        <th>起始編號</th>
                        <th>結束編號</th>
                        <th>已開具編號</th>
                        <th>票轉狀態</th>

                    </tr>
                </thead>
                <!--内容容器-->
                <tbody id="content"></tbody>
     
            </table>
            <div id="paged"></div>

        </div>
    </div>
    <script src="~/Content/layui_exts/excel.js"></script>
</body>
</html>

<!--内容模板-->
<script id="contentTpl" type="text/html">
    {{#  layui.each(d.list, function(index, item){ }}
    <tr>
        <td>
            <input type="checkbox" lay-skin="primary" value="{{item.Id}}">
        </td>
        <td>

            {{item.MachineNo}}
        </td>
        <td>
            {{item.InvoiceYear}}
        </td>
        <td>
            {{item.InvoiceMonth}}
        </td>
        <td>
            {{item.IvWord}}
        </td>

        <td>
            {{item.IvSNo}}
        </td>

        <td>

            {{item.IvENo}}
        </td>
        <td>
            {{item.PresentNo}}

        </td>

        <td>
            {{# if(item.Statue==1){ }}未啟用
    {{# }else if(item.Statue==2){ }} <span class="label label-info label-sm">已啟用</span>
    {{# }else{ }}<span class="label label-success label-sm">已使用完</span>
    {{# } }}

</td>

    </tr>
    {{#  }); }}
    {{# if(d.list.length<=0) { }}
    <tr style="color: red">
        <td colspan="9">查無數據</td>
    </tr>
    {{# } }}
</script>

<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer', 'laydate'], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        paging = layui.paging();

        $("#toolbar").authorizeButton();

        initGrid();

        $('#btnSearch').click(initGrid);

    });

    function initGrid() {
        paging.init({
            url: '/PBusiness/Invoice/Index',
            elem: '#content',
            tempElem: '#contentTpl',
            openWait:true,
            params: {
                InvoiceYear: $("#InvoiceYear").val(),
                InvoiceMonth: $("#InvoiceMonth").val(),
                Statue: $("#Statue").val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 30,
            },
            success: function () {

            }
        });
    }

    function btn_Invoice() {
        $.layerOpen({
            id: "edit",
            title: "票卷數據獲取",
            width: "480px",
            height: "450px",
            content: "/PBusiness/Invoice/Form",
            btn: null,
            yes: function (iBody) {
                initGrid();
            }
        });
    }

</script>

