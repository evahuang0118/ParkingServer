@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>固定车修改日志记录</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <script src="~/Content/framework/js/com.js"></script>
    <style type="text/css">
        .layui-table-cell {
            height: auto !important;
            white-space: normal;
        }
    </style>
</head>
<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <fieldset class="layui-elem-field layuimini-search">
                <legend>搜索信息</legend>
                <div style="margin: 5px 5px 5px 5px">
                    <div class="layui-form layui-form-pane">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">車牌號碼</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="PlateNo" autocomplete="off" class="layui-input">
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label" style="width:120px">操作時段</label>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="Btime" name="Btime" placeholder="" autocomplete="off" />
                                </div>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="Etime" name="Etime" placeholder="" autocomplete="off" />
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label">操  作</label>
                                <div class="layui-input-inline">
                                    <select name="OType" id="OType" lay-verify="required" style="width:190px;">
                                        <option value="0">請選擇</option>
                                        <option value="1">新 增</option>
                                        <option value="2">修 改</option>
                                        <option value="3">删 除</option>
                                    </select>
                                </div>
                            </div>


                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                                @*<button class="layui-btn layui-btn-normal" type="button" id="btnExcel"> 導出 Excel</button>*@

                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>


            <div id="toolbar" class="elight-table-toolbar">
                <div class="layui-btn-group"></div>
            </div>

            <table class="layui-hide" id="gridList" lay-filter="gridList"></table>

            <blockquote class="layui-elem-quote">說明：車輛日誌是記錄操作人員對固定車信息的維護管理</blockquote>

            <script type="text/html" id="BlackWhite">
                {{#  if(d.BlackWhite==1){ }}
                白名單
                {{#  }else{ }}
                黑名單
                {{# } }}
            </script>

            <script type="text/html" id="RecyclingType">
                {{#  if(d.RecyclingState==1){ }}
                有 效
                {{#  }else{ }}
                已回收
                {{# } }}
            </script>

            <script id="barDemo" type="text/html">
                <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
            </script>


        </div>
    </div>
    <script src="~/Content/layui/layui.js" charset="utf-8"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/layui_exts/excel.js"></script>
</body>
</html>

<script type="text/javascript">
    layui.config({
        base: parent._baseUrl
    }).use(['jquery', 'form', 'layer', 'laydate'], function () {
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;


        $("#toolbar").authorizeButton();

        laydate.render({
            elem: "#Etime"
            , type: 'datetime'

        });

        laydate.render({
            elem: "#Btime"
            , type: 'datetime'

        });
    });

    layui.use(['form', 'table'], function () {
        var form = layui.form,
            table = layui.table;

        function initGrid() {
            table.render({
                elem: '#gridList',
                url: '/PBusiness/CarInfo/FCarLog',
                where: {
                    Btime: $("#Btime").val(),
                    Etime: $("#Etime").val(),
                    plateNo: $("#PlateNo").val(),
                    OType: $("#OType").val(),

                },
                method: 'post',
                cellMinWidth: 80,
                height: 'full-150',
                cols: [[
                    { field: 'Id', title: '',  width:40,},
                    {
                        field: 'Upload', width: 90, title: '操作', templet: function (d) {
                            if (d.Upload==1)
                                return "<a style=\"color:blue\">新 增</a>";
                            else if (d.Upload ==2)
                                return "<a style=\"color:red\">修 改</a>";
                            else
                                return "<a style=\"color:black\">删 除</a>";
                        },
                        width: 80, 
                    },
                    { field: 'UpdateId', width: 80, title: '操作人'},
                    { field: 'UpdateTime', width: 170, title: '操作時間',sort: true, },
                    { field: 'PlateNo', width: 100, title: '車牌號碼' },
                    { field: 'Name', width: 120, title: '姓 名' },
                    { field: 'OrgId', width: 250, title: '公司機構' },
                    { field: 'Phone', width: 130, title: '聯繫電話' },
                    { field: 'PlaceNum', width:70, title: '車位編號' },
                    { field: 'BusinessName', width: 90, title: '類 型' },
                    { field: 'RecyclingState', width: 90, title: '狀態', templet: '#RecyclingType', width: 95 },
                    { field: 'BlackWhite', width: 90, title: '黑白名單', templet: '#BlackWhite', width: 95 },
                    { field: 'AverageName', width: 220, title: '月租種類' },
                    { field: 'Address', width:190, title: '地 址' },
                    { field: 'Remark', width: 300, title: '備 註' }
                ]],
                limits: [30, 50, 80, 100, 150, 200],
                limit: 30,
                page: true,
                even: true,
                done: function (res, curr, count) {
                    if (res.data == null || res.data.length == 0) {
                        $('.layui-table-total').css({ display: "none" })

                    }
                }
            });
        }

        initGrid();

        $('#btnSearch').on("click", function () {
            initGrid();
        });

        //$('#btnExcel').on("click", function () {
        //    btn_Excel();
        //});

    });

    function btn_Excel() {
        layui.use(['layer'], function () {
            var $ = layui.jquery
            var layer = layui.layer
            var excel = layui.excel

            $.ajax({
                url: '/PBusiness/CarInfo/FCarLogExport'
                , dataType: 'json'
                , success: function (res) {
                    var data = res.data
                    data = excel.filterExportData(data, {
                          Id:'Id'
                        , Other: 'Other'
                        ,UpdateId: 'UpdateId'
                        , UpdateTime: 'UpdateTime'
                        , PlateNo: 'PlateNo'
                        , Name: 'Name'
                        , FullName: 'FullName'
                        , Phone: 'Phone'
                        , PlaceNum: 'PlaceNum'
                        , BusinessName: 'BusinessName'
                        , RecyclingState: 'RecyclingState'
                        , BlackWhite: 'BlackWhite'
                        , AverageName: 'AverageName'
                        , Address: 'Address'
                        , Remark: 'Remark'
                    })
                    data.unshift({
                        Id: "",
                        Other:"操作",
                        UpdateId: '操作人',
                        UpdateTime: '操作時間',
                        PlateNo: '車牌號碼',
                        Name: '姓名',
                        FullName: '公司機構',
                        Phone: "聯繫電話",
                        PlaceNum: '車位編號',
                        BusinessName: '類型',
                        RecyclingState: '狀態',
                        BlackWhite: '黑白名單',
                        AverageName: '月租種類',
                        Address: '地址',
                        Remark:'備註'

                    });
                    top.LAY_EXCEL.exportExcel({
                        sheet1: data
                    }, '月租車操作日誌記錄_' + getDateTime() + '.xlsx', 'xlsx')
                }
                , error: function () {
                    layer.alert('獲取數據失败!!!')
                }
            })
        })
    }

    function btn_PDF() {
        window.location.href = "/PBusiness/CarInfo/FCarLogPDF?Etime=" + $("#Etime").val() + "&Btime=" + $("#Btime").val() + "&OType=" + $("#OType").val();
    }

</script>


