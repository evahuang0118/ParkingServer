<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer', 'upload'], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        var upload = layui.upload;
        paging = layui.paging();

        $("#toolbar").authorizeButton();

        $('#btnSearch').click(initGrid);

        $("#BusinessType").bindSelect({
            url: "/PBusiness/BusinessType/GetBusinessType"
        });

        $("#AverageType").bindSelect({
            url: "/PBusiness/AverageRental/GetAverageType"
        });

        initGrid();

        //执行实例
        var uploadInst = upload.render({
            elem: '#btnUpload', //绑定元素
            method: 'post',
            accept: 'file',
            url: '/PBusiness/CarInfo/UploadAvatarExcel', //上传接口
            done: function (res) {
                //上传完毕回调
                if (res.state == 0) {
                    $.layerMsg(res.message);
                }
                else {
                    $.layerMsg("導入數據成功！");
                    initGrid();
                }
            },
            error: function () {
                //请求异常回调
            }
        });

        $(document).ready(function () {
            $(".layui-btn-group button").each(function () {
                var obj = $(this).attr("onclick");
                if (obj == "null") {
                    $(this).hide();
                }
            });
        });
    });

    function initGrid() {
        paging.init({
            url: '/PBusiness/CarInfo/Index',
            elem: '#content',
            tempElem: '#contentTpl',
            openWait: true,
            params: {
                PlateNo: $("#PlateNo").val(),
                Name: $("#Name").val(),
                Phone: $("#Phone").val(),
                BusinessType: $("#BusinessType").val(),
                state: $("#RecyclingState").val(),
                BlackWhite: $("#BlackWhite").val(),
                OrgId: $("#OrgId").val(),
                AverageType:$("#AverageType").val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 30,
            },
            success: function () {
            }
        });
    }

    function btn_add() {
        var sm = window.matchMedia("(max-width: 768px)")
        $.layerOpen({
            id: "add",
            title: "新增車輛",
            // width: "670px",
            width: sm.matches ? "350px" : "670px",
            height: "600px",
            content: "/PBusiness/CarInfo/Form",
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_edit() {

        var ids = $("#gridList").gridSelectedRowValue();

        if (ids.length > 1 || ids.length<1) {
            $.layerMsg("請勾選單條記錄修改。", "warning");
            return;
        }
        
        var sm = window.matchMedia("(max-width: 768px)")

        $.layerOpen({
            id: "edit",
            title: "修改車輛",
            width: sm.matches ? "350px" : "670px",
            height: "600px",
            content: "/PBusiness/CarInfo/Form?primaryKey=" + ids[0],
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btnDetail() {

        var ids = $("#gridList").gridSelectedRowValue();

        if (ids.length > 1 || ids.length < 1) {
            $.layerMsg("請勾選單條記錄", "warning");
            return;
        }
        
        var sm = window.matchMedia("(max-width: 768px)")
        
        console.log(`btndetail sm = ${sm}`)

        $.layerOpen({
            id: "edit",
            title: "詳細資料",
            // width: "1100px",
            width: sm.matches ? "500px" : "1100px",
            height: "650px",
            content: "/PBusiness/CarInfo/Detail?primaryKey=" + ids[0] + "&plateNo=" + ids[1],
            btn: null
        });
    }

    function btn_topup() {
        var ids = $("#gridList").gridSelectedRowValue();

        if (ids.length > 1 || ids.length < 1) {
            $.layerMsg("請勾選單條記錄續費操作。", "warning");
            return;
        }

        var sm = window.matchMedia("(max-width: 768px)")
        $.layerOpen({
            id: "edit",
            title: "續費充值",
            width: sm.matches ? "350px" : "750px",
            height: "550px",
            content: "/PBusiness/Careffectivelog/Form?primaryKey=" + ids[0],
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_Ptopup() {
        var sm = window.matchMedia("(max-width: 768px)")
        $.layerOpen({
            id: "edit",
            title: "批量續費充值",
            width: sm.matches ? "350px" : "750px",
            height: "570px",
            content: "/PBusiness/Careffectivelog/PForm",
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_Detail(key, plateNo) {
        
        
        var sm = window.matchMedia("(max-width: 768px)")
        $.layerOpen({
            id: "edit",
            title: "詳細資料",
            // width: "1100px",
            width: sm.matches ? "500px" : "1100px",
            height: "650px",
            content: "/PBusiness/CarInfo/Detail?primaryKey=" + key + "&plateNo=" + plateNo,
            btn: null
        });
    }

    function btn_delete() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length < 1) {
            $.layerMsg("請勾選需要删除的選項！", "warning");
            return;
        }
        $.layerConfirm({
            content: "您確定要刪除嗎?請慎重操作！！！",
            callback: function () {
                $.formSubmit({
                    url: '/PBusiness/CarInfo/Delete',
                    data: { primaryKey: ids[0] },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }

    function btnEnable(primaryKey) {
        $.layerConfirm({
            content: "您確定要啟用此車牌嗎？",
            callback: function () {
                $.formSubmit({
                    url: '/PBusiness/CarInfo/Enable',
                    data: { primaryKey: primaryKey},
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }

    function btn_Excel() {
        layui.use(['layer'], function () {
            var $ = layui.jquery
            var layer = layui.layer
            var excel = layui.excel
            $.ajax({
                url: '/PBusiness/CarInfo/Export'
                , dataType: 'json'
                , success: function (res) {
                    var data = res.data
                    data = excel.filterExportData(data, {
                        PlateNo: 'PlateNo'
                        , Name: 'Name'
                        , FullName: 'FullName'
                        , Phone: 'Phone'
                        , BusinessName: 'BusinessName'
                        , Address: 'Address'
                        , BeginTime: 'BeginTime'
                        , EndTime: 'EndTime'
                        , BlackWhite: 'BlackWhite'
                        , CreateId: 'CreateId'
                        , CreateTime: 'CreateTime'
                        , UpdateId: 'UpdateId'
                        , UpdateTime: 'UpdateTime'
                        , Remark: 'Remark'
                    })
                    data.unshift({
                        PlateNo: "車牌號碼",
                        Name: "姓名",
                        FullName: '公司機構',
                        Phone: "聯繫電話",
                        BusinessName: "種 類",
                        Address: "地  址",
                        BeginTime: '開卡時間',
                        EndTime: '截止時間',
                        BlackWhite: '白黑名單',
                        CreateId: '創建人',
                        CreateTime: '創建時間',
                        UpdateId: '修改人',
                        UpdateTime: '修改時間',
                        Remark: '備註'
                    });
                    top.LAY_EXCEL.exportExcel({
                        sheet1: data
                    }, '月租車輛記錄信息_' + getDateTime() + '.xlsx', 'xlsx')
                }
                , error: function () {
                    layer.alert('存取數據失敗!!!')
                }
            })
        })
    }

    function btn_PDF() {
        window.location.href = "/PBusiness/CarInfo/CarInfoPDF"
    }

</script>
