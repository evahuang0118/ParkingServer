<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer', 'laydate'], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        paging = layui.paging();
        var laydate = layui.laydate;

        $("#toolbar").authorizeButton();

        laydate.render({
            elem: "#Etime"
            , type: 'datetime'

        });
        laydate.render({
            elem: "#Btime"
            , type: 'datetime'

        });

        laydate.render({
            elem: "#bengintime"
            , type: 'datetime'

        });
        laydate.render({
            elem: "#endtime"
            , type: 'datetime'

        });

        laydate.render({
            elem: "#PEtime"
            , type: 'datetime'

        });
        laydate.render({
            elem: "#PBtime"
            , type: 'datetime'

        });

        initGrid();
      
        $('#btnSearch').click(initGrid);

        $("#BusinessType").bindSelect({
            url: "/PBusiness/BusinessType/GetBusinessType"
        });

        $("#AverageType").bindSelect({
            url: "/PBusiness/AverageRental/GetAverageType"
        });
    });

    function initGrid() {
        paging.init({
            url: '/PBusiness/Careffectivelog/Index',
            elem: '#content',
            tempElem: '#contentTpl',
            openWait:true,
            params: {
                PlateNo: $("#PlateNo").val(),
                Name: $("#Name").val(),
                BusinessType: $("#BusinessType").val(),
                state: $("#RecyclingState").val(),
                OrgId: $("#OrgId").val(),
                Btime: $("#Btime").val(),
                Etime: $("#Etime").val(),
                begintime:$("#bengintime").val(),
                endtime: $("#endtime").val(),
                PBtime: $("#PBtime").val(),
                PEtime: $("#PEtime").val(),
                AverageType: $("#AverageType").val(),
                CState: $("#CState").val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 30,
            },
            success: function () {
                var h1 = 0;
                var h2 = 0;
                $("#hj").empty();
                $("#jj").empty();
                $('#content tr').each(function () {
                    h1 += Number($(this).find("td:nth-child(7)").html());
                    h2 += Number($(this).find("td:nth-child(6)").html() == "" ? "0" : $(this).find("td:nth-child(6)").html());
                })
                $("#hj").append(h1.toFixed(0).toString());
                $("#jj").append(h2.toFixed(0).toString());
            }
        });
    }

    function btn_delete() {
        var ids = $("#gridList").gridSelectedRowValue();
        if (ids.length < 1) {
            $.layerMsg("請勾選需要取消的選項。", "warning");
            return;
        }
        if (ids.length>=2) {
            $.layerMsg("每次只能勾選一條數據。", "warning");
            return;
        }
        $.layerConfirm({
            content: "您確定取消續期嗎？此操作不可恢復！",
            callback: function () {
                $.formSubmit({
                    url: '/PBusiness/Careffectivelog/Delete',
                    data: { primaryKey: ids[0] },
                    success: function () {
                        initGrid();
                    }
                });
            }
        });
    }

    function btn_edit() {

        var ids = $("#gridList").gridSelectedRowValue();

        if (ids.length > 1 || ids.length < 1) {
            $.layerMsg("請勾選單條記錄修改。", "warning");
            return;
        }

				var sm = window.matchMedia("(max-width: 768px)")

        $.layerOpen({
            id: "edit",
            title: "修改續期",
					  width: sm.matches ? "350px" : "900px",
            height: "600px",
            content: "/PBusiness/Careffectivelog/EForm?primaryKey=" + ids[0],
            yes: function (iBody) {
                iBody.find('#btnSubmit').click();
                initGrid();
            }
        });
    }

    function btn_Excel() {
        layui.use(['layer'], function () {
            var $ = layui.jquery
            var layer = layui.layer
            var excel = layui.excel
            $.ajax({
                url: '/PBusiness/Careffectivelog/Export'
                , dataType: 'json'
                , success: function (res) {
                    var data = res.data
                    data = excel.filterExportData(data, {
                          RenewalPlate: 'RenewalPlate'
                        , CName: 'CName'
                        , FullName: 'FullName'
                        , BusinessName: 'BusinessName'
                        , RenewalPrice:'RenewalPrice'
                        , PaidNo: 'PaidNo'
                        , Btime: 'Btime'
                        , Etime: 'Etime'
                        , CreateId: 'CreateId'
                        , CreateTime: 'CreateTime'
                        , UpdateId: 'UpdateId'
                        , UpdateTime: 'UpdateTime'
                        , Describe: 'Describe'
                    })
                    data.unshift({
                        RenewalPlate: "車牌號碼",
                        CName: "姓名",
                        FullName: '公司機構',
                        BusinessName: "種類",
                        RenewalPrice:"單 價",
                        PaidNo: "續費金額",
                        Btime: '有效起始時間',
                        Etime: '有效结束時間',
                        CreateId: '創建人',
                        CreateTime: '創建時間',
                        UpdateId: '修改人',
                        UpdateTime: '修改時間',
                        Describe: "備註"
                    });
                    top.LAY_EXCEL.exportExcel({
                        sheet1: data
                    }, '車輛續費記錄信息_' + getDateTime() + '.xlsx', 'xlsx')
                }
                , error: function () {
                    layer.alert('取得數據失敗!!!')
                }
            })
        })
    }

    function btn_Detail(key) {
        var sm = window.matchMedia("(max-width: 768px)")
        $.layerOpen({
            id: "edit",
            title: "詳細資料",
            // width: "700px",
            width: sm.matches ? "350px" : "700px",
            height: "600px",
            content: "/PBusiness/Careffectivelog/Detail?primaryKey=" + key,
            btn: null
        });
    }

    function btn_PDF() {
        window.location.href = "/PBusiness/Careffectivelog/CareffectivePDF?Etime=" + $("#Etime").val() + "&Btime=" + $("#Btime").val();
    }

</script>