                                <div class="layui-input-inline">
                                    @*<select lay-ignore class="layui-input" name="OrgId" lay-verify="required" style="width: 190px;" id="OrgId"></select>*@
                                    <input type="text" id="OrgId" name="OrgId" autocomplete="off" class="layui-input" />
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label">創建時間</label>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="bengintime" name="bengintime" placeholder="" autocomplete="off" />
                                </div>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="endtime" name="endtime" placeholder="" autocomplete="off" />
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label">修改時間</label>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="PBtime" name="PBtime" placeholder="" autocomplete="off" />
                                </div>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="PEtime" name="PEtime" placeholder="" autocomplete="off" />
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label">月租種類</label>
                                <div class="layui-input-inline">
                                    <select lay-ignore class="layui-input" name="AverageType" lay-verify="required" id="AverageType" style="width: 190px;"></select>
                                </div>
                            </div>

                           <div class="layui-inline">
                                <label class="layui-form-label">停車狀態</label>
                                <div class="layui-input-inline">
                                    <select class="layui-input" name="CState" id="CState" style="width: 190px;">
                                        <option value="0">請選擇</option>
                                        <option value="1">有 效</option>
                                        <option value="2">無 效</option>
                                    </select>
                                </div>
                            </div>


                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                                @*<button class="layui-btn layui-btn-normal" type="button" id="btnExcel"> 導出 Excel</button>*@
                            </div>
                        </div>
                    </div>
                </div>
