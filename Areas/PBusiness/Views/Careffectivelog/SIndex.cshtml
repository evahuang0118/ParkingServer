<script type="text/javascript">
    var paging;
    layui.config({
        base: parent._baseUrl
    }).use(['paging', 'form', 'layer', 'laydate'], function () {
        var layer = parent.layer || layui.layer;
        var form = layui.form;
        paging = layui.paging();
        var laydate = layui.laydate;

        $("#toolbar").authorizeButton();

        laydate.render({
            elem: "#Etime"
            , type: 'datetime'

        });

        laydate.render({
            elem: "#Btime"
            , type: 'datetime'

        });

        initGrid();

        $('#btnSearch').on('click', function () {
            if ($("#Btime").val() == "" || $("#Etime").val() == "") {
                alert("查詢時段範圍不能為空!");
                return false;
            }
            initGrid();
        });


        $("#BusinessType").bindSelect({
            url: "/PBusiness/BusinessType/GetBusinessType"
        });


        $("#AverageType").bindSelect({
            url: "/PBusiness/AverageRental/GetAverageType"

        });
    });

    function initGrid() {
        paging.init({
            url: '/PBusiness/Careffectivelog/SIndex',
            elem: '#content',
            tempElem: '#contentTpl',
            openWait: true,
            paged: false,
            params: {
                PlateNo: $("#PlateNo").val(),
                Name: $("#Name").val(),
                BusinessType: $("#BusinessType").val(),
                state: $("#RecyclingState").val(),
                OrgId: $("#OrgId").val(),
                Btime: $("#Btime").val(),
                Etime: $("#Etime").val(),
                AverageType: $("#AverageType").val(),
                CState: $("#CState").val()
            },
            pageConfig: {
                elem: 'paged',
                pageSize: 30,
            },
            success: function () {
                var tnum = 0;
                var h1 = 0;
                var h2 = 0;
                //$("#hj").empty();
                $("#jj").empty();
                $("#tNum").empty();
                $('#content tr').each(function () {
                    //h1 += Number($(this).find("td:nth-child(7)").html());
                    h2 += Number($(this).find("td:nth-child(8)").html() == "" ? "0" : $(this).find("td:nth-child(8)").html());
                    tnum++;
                })
                //$("#hj").append(h1.toFixed(2).toString());
                $("#jj").append(h2.toFixed(0).toString());
                $("#tNum").append("總條數:" + tnum.toFixed(0).toString());
            }
        });
    }

    function btn_Excel() {
        layui.use(['layer'], function () {
            var $ = layui.jquery
            var layer = layui.layer
            var excel = layui.excel
            $.ajax({
                url: '/PBusiness/Careffectivelog/SExport?Etime=' + $("#Etime").val()
                , dataType: 'json'
                , success: function (res) {
                    var data = res.data
                    data = excel.filterExportData(data, {
                        RenewalPlate: 'RenewalPlate'
                        , CName: 'CName'
                        , FullName: 'FullName'
                        , BusinessName: 'BusinessName'
                        , RenewalPrice: 'RenewalPrice'
                        , PaidNo: 'PaidNo'
                        , Btime: 'Btime'
                        , Etime: 'Etime'
                        , CreateId: 'CreateId'
                        , CreateTime: 'CreateTime'
                        , UpdateId: 'UpdateId'
                        , UpdateTime: 'UpdateTime'
                    })
                    data.unshift({
                        RenewalPlate: "車牌號碼",
                        CName: "姓 名",
                        FullName: '公司機構',
                        BusinessName: "停車類型",
                        RenewalPrice: "單價",
                        PaidNo: "續費金額",
                        Btime: '有效起始時間',
                        Etime: '有效结束時間',
                        CreateId: '創建人',
                        CreateTime: '創建時間',
                        UpdateId: '修改人',
                        UpdateTime: '修改時間'
                    });
                    top.LAY_EXCEL.exportExcel({
                        sheet1: data
                    }, '車輛續費統計信息_' + getDateTime() + '.xlsx', 'xlsx')
                }
                , error: function () {
                    layer.alert('讀取資料失敗!!!')
                }
            })
        })
    }

    function btn_Detail(key) {
        $.layerOpen({
            id: "edit",
            title: "詳細資料",
            width: "700px",
            height: "600px",
            content: "/PBusiness/Careffectivelog/Detail?primaryKey=" + key,
            btn: null
        });
    }

    function btn_PDF() {
        window.location.href = "/PBusiness/Careffectivelog/SCareffectivePDF?Etime=" + $("#Etime").val() + "&Btime=" + $("#Btime").val();
    }

</script>

