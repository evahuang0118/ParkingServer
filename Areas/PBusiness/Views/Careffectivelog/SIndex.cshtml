                                    </select>
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">公司機構</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="OrgId" name="OrgId" autocomplete="off" class="layui-input" />
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">月租種類</label>
                                <div class="layui-input-inline">
                                    <select lay-ignore class="layui-input" name="AverageType" lay-verify="required" id="AverageType" style="width: 190px;"></select>
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label">停車狀態</label>
                                <div class="layui-input-inline">
                                    <select class="layui-input" name="CState" id="CState" style="width: 190px;">
                                        <option value="0">請選擇</option>
                                        <option value="1">有 效</option>
                                        <option value="2">無 效</option>
                                    </select>
                                </div>
                            </div>

                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
