    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script src="~/Content/framework/js/com.js"></script>
<form id="form" class="layui-form" style="margin-top: 25px">
    @Html.AntiForgeryToken()
 
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label label-required" style="width:120px">公司機構</label>
            <div class="layui-input-inline">
                <select lay-ignore class="select2" name="OrgId" lay-verify="required" style="width: 550px;" id="OrgId"></select>
            </div>
        </div>
    </div>

    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label" style="width:120px">不續費車牌</label>
            <div class="layui-input-inline">
                <textarea  name="MultiplePlate" id="MultiplePlate" placeholder="輸入不需要批量續費的車牌號碼,多個車牌號碼用 | 分開" title="输入不需要批量续费的車牌號碼,多个車牌號碼用 | 分隔开"  class="layui-textarea" style="width: 550px;"></textarea>
