</form>
<script>
    layui.use(['form', 'laydate'], function () {

        var form = layui.form;
        var laydate = layui.laydate;
        laydate.render({
            elem: "#Btime"
            , type: 'datetime'
            , value: getbeginDateTime()

        });

        laydate.render({
            elem: "#Etime"
           ,type: 'datetime'
        });

        $("#OrgId").bindSelect({
            url: "/System/Organize/GetListSelect",
            title: '請選擇组织機構'
        });

        form.on('select(timeNum)', function (data) {
            var cal = $("#timeNum").val();
            var bt = $("#Btime").val();
            if (bt != "") {
                var date = new Date(bt.replace(/-/g, "/"));
                var str = monthCompute(date, Number(cal));
                var lastDay = getLastDay(str);
                var day = getDiffDay(lastDay, str);
                if (day <= 1 || day==3)
                    $("#Etime").val(lastDay);
                else
                    $("#Etime").val(str);
            }
        });
        form.render();
        form.on('submit(add)', function (data) {
            var Btime = new Date($("#Btime").val());
            var Etime = new Date($("#Etime").val());

            if ($("#timeNum").val() == "0") {
                $.layerMsg("請選擇續費周期！", "warning");
                return false;
            }
            if (Btime > Etime) {
                $.layerMsg("起始時間不能大於结束時間！", "warning");
                return false;
            }

            if ($("#OrgId").val() == "771b628b-e43c-4592-b1ef-70ea23b0e378") {
                $.layerMsg("請選擇公司機構！", "warning");
                return false;
            }
            var vl=$("input[name='OperateType']:checked").val(); 
            data.field.operateType = vl;
            data.field.Btime = $("#Btime").val();
            data.field.Etime = $("#Etime").val();
            data.field.Accounts = $("#PaidNo").val();
            data.field.timeNum = $("#timeNum").val();
            data.field.OrgId = $("#OrgId").val();
            data.field.remark = $("#Describe").val();
            data.field.MultiplePlate = $("#MultiplePlate").val();
            $.formSubmit({
                url: "/PBusiness/Careffectivelog/PForm",
                data: data.field
            });
            return false;
        });
    });

    function monthCompute(date, num) {
        var day = date.getDate(),
            month = date.getMonth(),
            year = date.getFullYear(),
            dateArr = dateFormmat(date, 'yyyy-MM-dd hh:mm:ss').split(' ');

        year = year + parseInt((month + num) / 12);
        month = (month + num) % 12;
        //0-11 转变为 1-12
        month += 1;

        maxDayCount = new Date(year, month, 0).getDate();
        day > maxDayCount ? day = maxDayCount : '';

        month < 10 ? (month = '0' + month) : '';
        day < 10 ? (day = '0' + day) : '';
        return year + '-' + month + '-' + day + ' ' + dateArr[1];
    }

    function dateFormmat(date, format) {
        if (null == date) {
            return ''
        }
        if (typeof (date) == 'string' || typeof date === 'number') {
            date = (typeof date === 'number') ? new Date(date) : new Date((date || '').replace(/-/g, '/'))
        }
        var o = {
            "M+": date.getMonth() + 1, //month
            "d+": date.getDate(), //day
            "h+": date.getHours(), //hour
            "m+": date.getMinutes(), //minute
            "s+": date.getSeconds(), //second
            "q+": Math.floor((date.getMonth() + 3) / 3), //quarter
            "S": date.getMilliseconds() //millisecond
        }

        if (/(y+)/.test(format)) {
            format = format.replace(RegExp.$1, (date.getFullYear() + "").substr(4 - RegExp.$1.length));
        }

        for (var k in o) {
            if (new RegExp("(" + k + ")").test(format)) {
                format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
            }
        }
        return format;
    }

    function getLastDay(dt) {
        var year = new Date(dt.replace(/-/g, "/")).getFullYear(); //获取年份
        var month = new Date(dt.replace(/-/g, "/")).getMonth() + 1; //获取月份
        var lastDate = new Date(year, month, 0).getDate(); //获取当月最后一日
        month = month < 10 ? '0' + month : month;         //月份补 0
        return [year, month, lastDate].join("-") + " 23:59:59"
    }

    function getDiffDay(date_1, date_2) {
        // 计算两个日期之间的差值
        let totalDays, diffDate
        let myDate_1 = Date.parse(date_1)
        let myDate_2 = Date.parse(date_2)
        // 将两个日期都转换为毫秒格式，然后做差
        diffDate = Math.abs(myDate_1 - myDate_2) // 取相差毫秒数的绝对值

        totalDays = Math.floor(diffDate / (1000 * 3600 * 24)) // 向下取整
        // console.log(totalDays)

        return totalDays    // 相差的天数
    }

</script>

