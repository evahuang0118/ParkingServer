                                <label class="layui-form-label" style="width:120px">操作員</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="userName" autocomplete="off" class="layui-input">
                                </div>
                            </div>

                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </fieldset>

            <div id="toolbar" class="elight-table-toolbar">
                <div class="layui-btn-group"></div>
            </div>

            <input type="hidden" name="totailTime" id="totailTime" value="@ViewBag.totailTime" />
            <table class="layui-hide" id="gridList" lay-filter="gridList"></table>

            <script id="barDemo" type="text/html">
                <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
            </script>
        </div>
    </div>
    <script src="~/Content/layui/layui.js" charset="utf-8"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/layui_exts/excel.js"></script>
</body>
</html>

<script type="text/javascript">
    layui.config({
        base: parent._baseUrl
    }).use(['jquery', 'form', 'layer', 'laydate'], function () {
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;

        laydate.render({
            elem: "#Etime"
            , type: 'datetime'

        });

        laydate.render({
            elem: "#Btime"
            , type: 'datetime'

        });

        $("#toolbar").authorizeButton();
    });

    layui.use(['form', 'table'], function () {
        var form = layui.form,
            table = layui.table;

        function initGrid() {
            table.render({
                elem: '#gridList',
                url: '/Report/Custom/ChargeDay',
                where: {
                    PayType: $("#PayType").val(),
                    Btime: $("#Btime").val(),
                    Etime: $("#Etime").val(),
                    plateNo: $("#PlateNo").val(),
                    userName: $("#userName").val(),
                },
                method: 'post',
                cellMinWidth: 80,
                height: 'full-200',
                totalRow: true,
                cols: [[
                    { fixed: '', width: 60, align: 'left', toolbar: '#barDemo', totalRowText: '合计', fixed: 'left'},
                    { field: 'CreateName', width: 80, title: '操作員', style: 'color:blue', fixed: 'left'},
                    { field: 'PlateNo', width: 110, title: '車牌號碼', fixed: 'left' },
                    { field: 'PayTime', width: 170, title: '付費時間' },
                    { field: 'InTime', width: 170, title: '入場時間',},
                    { field: 'OutTime', width: 170, title: '出場時間', },
                    { field: 'StayTime', width: 90, title: '停車時間', totalRow: true},
                    { field: 'Actual', width: 90,  title: '應收金額', totalRow: true, style: 'color:blue;text-align:right',  templet: function (d) { return Number(d.Actual).toFixed(2); } },
                    { field: 'PayAmount', width: 90, title: '實收金額', totalRow: true, style: 'color:blue;text-align:right', templet: function (d) { return Number(d.PayAmount).toFixed(2); } },
                    {
                        field: 'FreeCost', width: 90, title: '折扣金額', totalRow: true, style: 'color:blue;text-align:right', templet: function (d) {
                            return Number(d.FreeCost).toFixed(2);
                        }
                    },
                    { field: 'PayName', width: 90, title: '支付方式', style: 'color:red' },
                    { field: 'FreeName', width: 300, title: '折扣類型', },
                    { field: 'Id', title: 'Id', hide: true },
                ]],
                limits: [30, 50, 80, 100, 150, 200],
                limit: 30,
                page: true,
                done: function (res, curr, count) {
                    if (res.data == null || res.data.length == 0) {
                        $('.layui-table-total').css({ display: "none" })
                    }

                    this.elem.next().find('.layui-table-total td[data-field="StayTime"] .layui-table-cell').text(res.msg)
                }
            });
        }

        initGrid();

        $('#btnSearch').on("click", function () {
            if ($("#Btime").val() != "" && $("#Etime").val() != "") {
                var btime = $("#Btime").val();
                var etime = $("#Etime").val();
                var sdate = new Date(btime);
                var now = new Date(etime);
                var days = now.getTime() - sdate.getTime();
                var day = parseInt(days / (1000 * 60 * 60 * 24));
                if (day > 31) {
                    alert("查詢時段範圍不能超過一個月！！！");
                    return false;
                }
                initGrid();
            }
        });

        table.on('tool(gridList)', function (obj) {
            var data = obj.data;
            if (obj.event === 'detail') {
                //layer.msg('ID：' + data.Id + ' 的查看操作');

                $.layerOpen({
                    id: "Detail",
                    title: "車輛記錄詳情",
                    width: "1180px",
                    height: "520px",
                    content: "/Report/OutRecord/Detail?primaryKey=" + data.Id,
                    btn: null
                })
            }
        });

    });

