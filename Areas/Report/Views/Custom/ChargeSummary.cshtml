<script type="text/javascript">

    layui.config({
        base: parent._baseUrl
    }).use(['jquery', 'form', 'layer', 'laydate'], function () {
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;

        $("#toolbar").authorizeButton();

        $("#SearcherType").bindSelect({
            url: "/Report/SummaryRecord/GetSummaryType"
        });

        laydate.render({
            elem: "#Btime"
            , type: 'date'
        });

        laydate.render({
            elem: "#Etime"
            , type: 'date'
        });

        laydate.render({
            elem: "#Bmonth"
            , type: 'month'
        });

        laydate.render({
            elem: "#Byear"
            , type: 'year'
        });

        $("#SearcherType").change(function () {
            var vl = $('#SearcherType').val();
            $("#Btime").val("");
            $("#Etime").val("");
            $("#Bmonth").val("");
            $("#Byear").val("");

            if (vl == "1") {
                $("#BdateTime").show();
                $("#EdateTime").hide();
                $("#dateMonth").hide();
                $("#dateYear").hide();
            }
            else if (vl == "2") {
                $("#BdateTime").show();
                $("#EdateTime").hide();
                $("#dateMonth").hide();
                $("#dateYear").hide();
            }
            else if (vl == "3") {
                $("#BdateTime").hide();
                $("#EdateTime").hide();
                $("#dateMonth").show();
                $("#dateYear").hide();
            }
            else if (vl == "5") {
                $("#BdateTime").hide();
                $("#EdateTime").hide();
                $("#dateMonth").hide();
                $("#dateYear").show();
            }
            else if (vl == "6") {
                $("#BdateTime").show();
                $("#EdateTime").show();
                $("#dateMonth").hide();
                $("#dateYear").hide();
            }
        });
    });

    layui.use(['form', 'table'], function () {
        var form = layui.form,
            table = layui.table;

        function initGrid(Btime, Etime, SearcherType, PayType) {
            table.render({
                elem: '#gridList',
                url: '/Report/Custom/ChargeSummary',
                where: {
                    Btime: Btime,
                    Etime: Etime,
                    SearchType: SearcherType,
                    PayType:$("#PayType").val()
                },
                method: 'post',
                cellMinWidth: 80,
                height: 'full-150',
                even: true,
                cols: [[
                    { field: 'Date', title: '日 期' },
                    { field: 'Num', title: '車次數' },
                    { field: 'ChargeNum', title: '繳費次數' },
                    { field: 'SumTime', title: '停留時長' },
                    { field: 'PayName', title: '支付方式',style:'color:blue' },
                    { field: 'Actual', title: '應收金額', templet: function (d) { return Number(d.Actual).toFixed(2); } },
                    { field: 'CashCost', title: '實收金額', templet: function (d) { return Number(d.CashCost).toFixed(2); } },
                    { field: 'FreeCost', title: '減免金額', templet: function (d) { return Number(d.FreeCost).toFixed(2); } },
                    { field: 'PreferentialCost', title: '代金卷', templet: function (d) { return Number(d.PreferentialCost).toFixed(2); } },
                ]],
                done: function (res) {
                    if (res.data == null || res.data.length == 0) {
                        $('.layui-table-total').css({ display: "none" })
                    }
                }
            });
        }

        $('#btnSearch').on("click", function () {

            var val = $("#SearcherType").val();
            var PayType = $("#PayType").val();
            if (val == "0" || PayType=="0")
                return false;

            if ((val == "1" || val == "2") && $("#Btime").val() != "") {
                initGrid($("#Btime").val(), "", val, PayType);
            }
            else if (val == "3" && $("#Bmonth").val() != "") {
                initGrid($("#Bmonth").val(), "", val, PayType);
            }
            else if (val == "5" && $("#Byear").val() != "") {
                initGrid($("#Byear").val(), "", val, PayType);
            }
            else if (val == "6" && $("#Btime").val() != "" && $("#Etime").val() != "") {
                var btime = $("#Btime").val();
                var etime = $("#Etime").val();
                var sdate = new Date(btime);
                var now = new Date(etime);
                var days = now.getTime() - sdate.getTime();
                var day = parseInt(days / (1000 * 60 * 60 * 24));
                if (day > 31) {
                    alert("查詢時間範圍不能超過一个月！！！");
                    return false;
                }
                initGrid($("#Btime").val(), $("#Etime").val(),val, PayType);
            }
        });

        $('#btnExcel').on("click", function () {
            btn_Excel();
        });

    });

