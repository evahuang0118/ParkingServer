@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>免费记录报表</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <script src="~/Content/framework/js/com.js"></script>
    <style type="text/css">
        .layui-table-cell {
            height: auto !important;
            white-space: normal;
        }
    </style>
</head>

<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <fieldset class="layui-elem-field layuimini-search">
                <legend>搜索信息</legend>
                <div style="margin: 5px 5px 5px 5px">
                    <div class="layui-form layui-form-pane">
                        <input type="hidden" name="userName" id="userName" />
                        <div class="layui-form-item">

                            <div class="layui-inline">
                                <label class="layui-form-label" style="width:120px">時段範圍</label>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="Btime" name="BIntime" placeholder="" autocomplete="off" />
                                </div>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="Etime" name="EIntime" placeholder="" autocomplete="off" />
                                </div>
                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label" style="width:120px">車牌號碼</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="PlateNo" autocomplete="off" class="layui-input">
                                </div>
                            </div>

                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                                <button class="layui-btn layui-btn-normal" type="button" id="btnExcel">導  出</button>
                            </div>

                        </div>
                    </div>
                </div>
            </fieldset>

            @*<div id="toolbar" class="elight-table-toolbar">
                    <div class="layui-btn-group"></div>
                </div>*@

            <table class="layui-hide" id="gridList" lay-filter="gridList"></table>

            <script id="barDemo" type="text/html">
                <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
            </script>


        </div>
    </div>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Content/layui_exts/excel.js"></script>
</body>
</html>

<script type="text/javascript">
    layui.config({
        base: parent._baseUrl
    }).use(['jquery', 'form', 'layer', 'laydate'], function () {
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;
        laydate.render({
            elem: "#Etime"
            , type: 'datetime'

        });

        laydate.render({
            elem: "#Btime"
            , type: 'datetime'

        });
    });

    layui.use(['form', 'table'], function () {
        var form = layui.form,
            table = layui.table;

        var benginTime = $.getQueryString("benginTime");
        var endTime = $.getQueryString("endTime");
        var userName = $.getQueryString("userName");

        $("#Btime").val(benginTime);
        $("#Etime").val(endTime);
        $("#userName").val(userName);

        function initGrid() {
            table.render({
                elem: '#gridList',
                url: '/Report/Ebnormal/CIndex',
                where: {
                    Btime: $("#Btime").val(),
                    Etime: $("#Etime").val(),
                    plateNo: $("#PlateNo").val(),
                    userName: $("#userName").val(),
                },
                method: 'post',
                cellMinWidth: 80,
                height: 'full-200',
                cols: [[
                    { field: 'Id', title: 'Id', hide: true },
                    { field: 'ChannelName', width: 115, title: '出口号'},
                    { field: 'OperateTime', width: 170, title: '操作時間' },
                    { field: 'PlateNo', width: 115, title: '車牌號碼' },
                    { field: 'InTime', width: 170, title: '入場時間' },
                    { field: 'OutTime', width: 170, title: '出場時間' },
                    { field: 'FreeName', title: '折扣類型'},
                    { field: 'OperateName', width: 90, title: '操作人' }
                ]],
                limits: [30, 50, 80, 100, 150, 200],
                limit: 30,
                page: true,
                done: function (res, curr, count) {
                    if (res.data == null || res.data.length == 0) {
                        $('.layui-table-total').css({ display: "none" })

                    }
                }
            });
        }

        initGrid();

        $('#btnExcel').on("click", function () {
            btnExcel();
        });

        $('#btnSearch').on("click", function () {
            initGrid();
        });

    });

    function btnExcel() {
        layui.use(['layer'], function () {
            var $ = layui.jquery
            var layer = layui.layer
            var excel = layui.excel

            $.ajax({
                url: '/Report/Ebnormal/CExport'
                , dataType: 'json'
                , success: function (res) {
                    var data = res.data
                    data = excel.filterExportData(data, {
                          ChannelName: 'ChannelName'
                        , OperateTime: 'OperateTime'
                        , PlateNo: 'PlateNo'
                        , InTime: 'InTime'
                        , OutTime:'OutTime'
                        , FreeName: 'FreeName'
                        , OperateName: 'OperateName'

                    })
                    data.unshift({
                        ChannelName: "出口通道",
                        OperateTime: "操作時間",
                        PlateNo: "車牌號碼",
                        InTime: "入場時間",
                        OutTime: "出場時間",
                        FreeName: "优免類型",
                        OperateName: '操作人',
       
                    });
                    top.LAY_EXCEL.exportExcel({
                        sheet1: data
                    }, '免費開閘記錄報表_' + getDateTime() + '.xlsx', 'xlsx')
                }
                , error: function () {
                    layer.alert('獲取數據失败!!!')
                }
            })
        })
    }

</script>


