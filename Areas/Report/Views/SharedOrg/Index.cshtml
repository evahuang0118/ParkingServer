@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>共享车位信息</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <script src="~/Content/framework/js/com.js"></script>
</head>
<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <fieldset class="layui-elem-field layuimini-search">
                <legend>搜索信息</legend>
                <div style="margin: 5px 5px 5px 5px">
                    <div class="layui-form layui-form-pane">
                        <div class="layui-form-item">
                            <div class="layui-inline">

                                <label class="layui-form-label" style="width:120px">查詢日期</label>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="Btime" name="Btime" placeholder="" autocomplete="off" />
                                </div>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="Etime" name="Etime" placeholder="" autocomplete="off" />
                                </div>

                            </div>

                            <div class="layui-inline">
                                <label class="layui-form-label" style="width:120px">公司機構</label>
                                <div class="layui-input-inline">

                                    <input type="text" id="OrgId" name="OrgId" autocomplete="off" class="layui-input" />

                                </div>
                            </div>

                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </fieldset>


            <div class="layui-row layui-col-space15">

                <div class="layui-col-xs12 layui-col-md8">
                    <fieldset class="layui-elem-field layui-field-title" style="margin-top:2px;">
                        <legend><span style="font-size:14px;color:blue">分配占用資料</span></legend>
                    </fieldset>

                    <table class="layui-table" id="gridList" lay-filter="gridList" style="margin-top:-25px;"></table>

                    <script id="barDemo" type="text/html">

                        <a class="layui-btn layui-btn-xs" lay-event="edit" style="text-align:center">校正</a>
                        <a class="layui-btn layui-btn-xs" lay-event="detail" style="text-align:center">查看</a>
                    </script>

                    <script id="SharedRules" type="text/html">
                        {{#  if(d.SharedRules==1){ }}
                        現金先免循環計算
                        {{# } else if(d.SharedRules==2) { }}
                        記錄交替循環計算
                        {{# } }}
                    </script>

                    <script type="text/html" id="State">
                        {{#  if(d.State=='1'){ }}
                        未离场
                        {{# } else if(d.State=='2') { }}
                        已离场
                        {{#  }else{ }}
                        已回收
                        {{# } }}
                    </script>

                    <div class="layui-collapse" lay-accordion="" id="instructions">
                        <div class="layui-colla-item">
                            <h2 class="layui-colla-title">
                                <i class="layui-icon">&#xe615;</i> 報表說明
                            </h2>
                            <div class="layui-colla-content">
                                <p style="color:currentColor">
                                    1. 此報表呈現的是一位多車共享車位信息,系統每天根據車位占用情況分配虛擬車位數。
                                    <br>
                                    2. 【分配車位】,是指車場方為車主分配設定虛擬車位數
                                    <br />
                                    3. 【剩余車位】,是指剩餘的虛擬車位數
                                    <br />
                                    4. 如果發現」剩餘車位數「,不對時,車場方可以對當天剩余車位數進行校正
                                    <br />
                                    5. 可以通過點擊 【查看】按鈕，查看虛擬車位占用情況
                                </p>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="layui-col-xs6 layui-col-md4">
                    <fieldset class="layui-elem-field layui-field-title" style="margin-top:2px;">
                        <legend><span style="font-size:14px;color:crimson">佔用明細資料</span></legend>
                    </fieldset>

                    <table class="layui-table" id="gridLists" lay-filter="gridLists" style="margin-top:-25px;"></table>

                </div>

            </div>
        </div>
    </div>
    <script src="~/Content/layui/layui.js" charset="utf-8"></script>
    <script src="~/Content/layui/layui.all.js"></script>
</body>
</html>

<script type="text/javascript">

    layui.config({
        base: parent._baseUrl
    }).use(['jquery', 'form', 'layer', 'laydate'], function () {
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;

        laydate.render({
            elem: "#Btime"
            , type: 'datetime'
            , value: getbeginDateTime()
        });
        laydate.render({
            elem: "#Etime"
            , type: 'datetime'
            , value: getbeginDateTime()
        });
    });

    layui.use(['form', 'table'], function () {
        var form = layui.form,
            table = layui.table;

        function initGrid() {
            table.render({
                elem: '#gridList',
                url: '/Report/SharedOrg/Index',
                where: {
                    Btime: $("#Btime").val(),
                    OrgName: $("#OrgId").val(),
                    Etime: $("#Etime").val()
                },
                method: 'post',
                cellMinWidth: 80,
                height: 'full-180',
                cols: [[
                    { fixed: '', align: 'left', width: 115, toolbar: '#barDemo' },
                    { field: 'Dtime', width: 125, title: '日 期' },
                    { field: 'OrgName', title: '公司機構' },
                    { field: 'DistributionNum', width: 90, title: '分配車位' },
                    { field: 'RemainingNum', title: '剩餘占用', width: 90, },
                    { field: 'SharedRules', title: '車位計算', templet: '#SharedRules' },
                    { field: 'RecordId', title: 'RecordId', hide: true },
                    { field: 'Id', title: 'Id', hide: true },

                ]],
                limits: [30, 50, 80, 100, 150, 200],
                limit: 30,
                page: true,
                done: function (res) {

                    if (res.data == null || res.data.length == 0) {
                        $('.layui-table-total').css({ display: "none" })
                    }
                }
            });
        }

        initGrid();

        $('#btnSearch').on("click", function () {
            initGrid();
        });

        table.on('tool(gridList)', function (obj) {
            var data = obj.data;
            if (obj.event === 'detail') {
                table.render({
                    elem: '#gridLists',
                    url: '/Report/SharedOrg/GetInOutList',
                    where: {
                        recordId: data.RecordId
                    },

                    method: 'post',
                    cellMinWidth: 80,
                    height: 'full-180',
                    cols: [[
                        { field: 'InPlate', width: 100, title: '車牌號碼', style: 'color:blue',fixed:'left' },
                        { field: 'InTime', width: 170, title: '入場時間' },
                        { field: 'OutTime', width: 170, title: '出場時間' },
                        { field: 'State', width: 90, title: '狀  態', templet: '#State', style: 'color:blue' },
                        { field: 'Remark', width: 170, title: '備 註' },
                    ]],
                    done: function (res) {

                        if (res.data == null || res.data.length == 0) {
                            $('.layui-table-total').css({ display: "none" })
                        }
                    }
                });
            }
            else if (obj.event === 'edit') {
                $.layerOpen({
                    id: "edit",
                    title: "校正車位數",
                    width: "670px",
                    height: "200px",
                    content: "/Report/SharedOrg/Form?primaryKey=" + data.Id + "&num=" + data.DistributionNum,
                    yes: function (iBody) {
                        iBody.find('#btnSubmit').click();
                        initGrid();
                    }
                })
            }
        });
    });
</script>