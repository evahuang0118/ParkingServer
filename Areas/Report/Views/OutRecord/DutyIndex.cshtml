@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>出场记录报表</title>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/framework/css/console.css" rel="stylesheet" />
    <link href="~/Content/framework/css/animate.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/framework/js/global.js"></script>
    <script src="~/Content/framework/js/com.js"></script>
    <style type="text/css">
        .layui-table-cell {
            height: auto !important;
            white-space: normal;
        }
    </style>
</head>
<body>
    <div class="panel animated fadeIn">
        <div class="panel-body">
            <fieldset class="layui-elem-field layuimini-search">
                <legend>搜索信息</legend>
                <div style="margin: 5px 5px 5px 5px">
                    <div class="layui-form layui-form-pane">
                        <input type="hidden" name="userName" id="userName" />
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">車牌號碼</label>
                                <div class="layui-input-inline">
                                    <input type="text" id="PlateNo" autocomplete="off" class="layui-input">
                                </div>
                            </div>

                            <div class="layui-inline">

                                <label class="layui-form-label" style="width:120px">出場時段範圍</label>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="BOuttime" name="BOuttime" placeholder="" autocomplete="off" />
                                </div>
                                <div class="layui-input-inline">
                                    <input class="layui-input" id="EOuttime" name="EOuttime" placeholder="" autocomplete="off" />
                                </div>

                            </div>
                            <div class="layui-inline">
                                <button id="btnSearch" class="toolbar-search-button layui-btn layui-btn-normal layui-btn-small">
                                    <i class="layui-icon">&#xe615;</i>搜 索
                                </button>
                                <button class="layui-btn layui-btn-normal" type="button" id="btnRefresh">刷 新</button>

                                <button class="layui-btn layui-btn-normal" type="button" id="btnPDF">導 出</button>
                            </div>

                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="layui-row layui-col-space10">
                <div class="layui-col-md9">
                    <table class="layui-hide" id="gridList" lay-filter="gridList"></table>

                    <script id="barDemo" type="text/html">
                        <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
                    </script>
                </div>
                <div class="layui-col-md3">
                    <table class="layui-hide" id="gridLists" lay-filter="gridLists"></table>
                </div>
            </div>

        </div>
        </div>
        <script src="~/Content/layui/layui.all.js"></script>
        <script src="~/Content/layui_exts/excel.js"></script>
</body>
</html>

<script type="text/javascript">

    layui.config({
        base: parent._baseUrl
    }).use(['jquery', 'form', 'layer', 'laydate'], function () {
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;

        laydate.render({
            elem: "#EOuttime"
            , type: 'datetime'
        });

        laydate.render({
            elem: "#BOuttime"
            , type: 'datetime'

        });

    });

    layui.use(['form', 'table'], function () {
        var form = layui.form,
            table = layui.table;

        var benginTime = $.getQueryString("benginTime");
        var endTime = $.getQueryString("endTime");
        var userName = $.getQueryString("userName");

        $("#BOuttime").val(benginTime);
        $("#EOuttime").val(endTime);
        $("#userName").val(userName);

        function initGrid() {

            table.render({
                elem: '#gridList',
                url: '/Report/OutRecord/DutyIndex',
                where: {
                    Bouttime: $("#BOuttime").val(),
                    Eouttime: $("#EOuttime").val(),
                    plateNo: $("#PlateNo").val(),
                    userName: $("#userName").val()
                    //FreeCast: $("#FreeCast").val()
                },
                method: 'post',
                cellMinWidth: 80,
                height: 'full-200',
                totalRow: true,
                cols: [[
                    { fixed: '', width: 80, align: 'center', toolbar: '#barDemo' },
                    { field: 'Id', title: 'ID', hide: true },
                    { field: 'InPlate', width: 120, title: '車牌號碼', style: 'color:blue', totalRowText: '合計', },
                    { field: 'InTime', width: 170, title: '入場時間', sort: true },
                    { field: 'OutTime', width: 170, title: '出場時間', sort: true, },
                    { field: 'Actual', width: 80, title: '應付', totalRow: true, style: 'color:midnightblue' },
                    { field: 'CashCost', width: 80, title: '現金支付', totalRow: true, style: 'color:midnightblue' },
                    { field: 'MobileCost', width: 80, title: '移動支付', totalRow: true, style: 'color:midnightblue' },
                    { field: 'FreeCost', width: 80, title: '折扣付', totalRow: true, style: 'color:midnightblue' },
                    { field: 'ElectronicCost', width: 80, title: '電子卷', totalRow: true, style: 'color:midnightblue' },
                    { field: 'Remark', width: 175, title: '停留時長', style: 'color:forestgreen' },
                    { field: 'InPlateImg', width: 180, title: '車牌圖片', templet: '<div><img style="height:50px;width:180px;" src="{{d.InPlateImg}}"></div>' },
                    { field: 'BusinessName', width: 90, title: '停車類型', style: 'color:blue' },
                    { field: 'OperateId', width: 90, title: '操作人' },
                    { field: 'OperateTime', width: 170, title: '操作時間' },
                    { fixed: '', width: 80, align: 'center', toolbar: '#barDemo' }
                ]],
                limits: [50, 80, 100, 150, 200, 500],
                limit: 50,
                page: true,
                done: function (res, curr, count) {
                    if (res.data == null || res.data.length == 0) {
                        $('.layui-table-total').css({ display: "none" })

                    }
                }
            });
        }

        function initGrids() {
            table.render({
                elem: '#gridLists',
                url: '/Report/OutRecord/DutyPaySummary',
                where: {
                    Bouttime: $("#BOuttime").val(),
                    Eouttime: $("#EOuttime").val(),
                    plateNo: $("#PlateNo").val(),
                    userName: $("#userName").val()
                },
                method: 'post',
                cellMinWidth: 80,
                totalRow: true,
                cols: [[
                    { field: 'TypeName', title: '分  類' },
                    { field: 'PaySum', width: 90, title: '合計金額' },
                    { field: 'PayCount', title: '筆(張)数', width: 90, },
                ]],
                done: function (res) {

                    if (res.data == null || res.data.length == 0) {
                        $('.layui-table-total').css({ display: "none" })
                    }
                }
            });
        }

        initGrid();

         initGrids();

        $('#btnSearch').on("click", function () {
            initGrid();

            initGrids();
        });

        $('#btnRefresh').on("click", function () {
            initGrid();

            initGrids();
        });

        $('#btnPDF').on("click", function () {
            btnPDF();
        });

        table.on('tool(gridList)', function (obj) {
            var data = obj.data;
            if (obj.event === 'detail') {
                $.layerOpen({
                    id: "Detail",
                    title: "車輛記錄詳情",
                    width: "1100px",
                    height: "520px",
                    content: "/Report/OutRecord/DutyDetail?primaryKey=" + data.Id,
                    btn: null
                })
            }
        });
    });

    function btnPDF() {
        window.location.href = "/Report/OutRecord/COutParkingRecordPDF";
    }


</script>